<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context=".MainActivity">

	<include layout="@layout/toolbar" />

	<android.support.v4.widget.DrawerLayout
		android:id="@+id/drawer"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!--    主界面    -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<Button
				android:id="@+id/listview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/listview"
				/>

			<Button
				android:id="@+id/picker"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/picker"
				/>

			<Button
				android:id="@+id/gridView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/gridView"
				/>

			<Button
				android:id="@+id/spinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/spinner"
				/>

			<Button
				android:id="@+id/progressBar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/progressBar"
				/>

			<Button
				android:id="@+id/webView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/webView"
				/>

			<Button
				android:id="@+id/viewpager"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/viewpager"
				/>

			<Button
				android:id="@+id/flipper"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/flipper"
				/>

			<Button
				android:id="@+id/asynctask"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/AsyncTask"
				/>

		</LinearLayout>
		<!--    侧边栏    -->
		<include layout="@layout/drawerlayout" />

	</android.support.v4.widget.DrawerLayout>

</LinearLayout>
